<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/linearLay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="¿CÓMO CONOCE EL CLIENTE MI NEGOCIO?"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/textViewBuscadores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewTarjetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewRedesSociales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewBoca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewLocalizacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewOtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un total de X clientes fueron preguntados"
            android:textAlignment="center"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:columnCount="3"
            android:rowCount="2">

            <CheckBox
                android:text="Buscadores"
                android:buttonTint="@color/colorPrimary"

                android:checked="true"
                />
            <CheckBox
                android:text="Tarjetas"
                android:buttonTint="@android:color/holo_green_dark"
                android:checked="true"
                />
            <CheckBox
                android:text="Redes Sociales"
                android:buttonTint="@android:color/holo_orange_dark"
                android:checked="true"
                />
            <CheckBox
                android:text="Boca a boca"
                android:buttonTint="@android:color/holo_red_dark"
                android:checked="true"
                />
            <CheckBox
                android:text="Localización"
                android:buttonTint="@color/colorPrimary"
                android:checked="false"
                />
            <CheckBox
                android:text="Otros"
                android:buttonTint="@color/colorPrimary"
                android:checked="false"
                />


        </GridLayout>

        <Button
            android:id="@+id/butt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIPO DE GRÁFICA"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechartId"
            android:layout_width="match_parent"
            android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

    </LinearLayout>
</ScrollView>